<section class="signupin">
  <form action="/auth/login" method="POST" class="signupin__form">
    <div class="signupin__item heading-3">
      <label for="email">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        placeholder="Email"
        required
      />
    </div>

    <div class="signupin__item heading-3">
      <label for="password">Password</label>
      <input
        type="password"
        id="password"
        name="password"
        placeholder="Password"
        required
      />
    </div>

    <button class="btn" type="submit">Signin</button>
  </form>
</section>
